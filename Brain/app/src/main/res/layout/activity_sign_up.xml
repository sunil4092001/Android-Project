<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sign_up">
    <ImageView
        android:id="@+id/si_up_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/brain" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">


        <EditText
            android:id="@+id/si_up_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:drawableStart="@drawable/name"
            android:drawableLeft="@drawable/name"
            android:hint="Name"
            android:textColorHint="@color/purple_700"
            android:drawablePadding="12dp"
            android:ems="10"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/si_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/em24dp"
            android:drawableLeft="@drawable/em24dp"
            android:hint="Email"
            android:textColorHint="@color/purple_700"
            android:drawablePadding="12dp"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/si_up_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/lock"
            android:drawableLeft="@drawable/lock"
            android:hint="Password"
            android:drawablePadding="12dp"
            android:textColorHint="@color/purple_700"
            android:inputType="textPassword"
           />

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:background="@drawable/shape" />

        <TextView
            android:id="@+id/for_have_ac_tv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Already Hava Account"
            android:textSize="20dp"
            android:textColor="@color/purple_500"
            android:textStyle=""
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:onClick="Move_to_signin"/>
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:orientation="horizontal">-->
            <ImageButton
                android:id="@+id/goo"
                android:layout_marginLeft="0dp"
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@drawable/google_img"/>

<!--            <ImageButton-->
<!--                android:id="@+id/fb"-->
<!--                android:layout_width="180dp"-->
<!--                android:layout_height="120dp"-->
<!--                android:background="@drawable/face"/>-->




<!--        </LinearLayout>-->


    </LinearLayout>

</LinearLayout>