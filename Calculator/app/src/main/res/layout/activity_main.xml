<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output"
        android:layout_width="424dp"
        android:layout_height="202dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="OUTPUT"
        android:textSize="50dp">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:includeFontPadding="true"
            android:text="1"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/b2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/b3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/b4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:includeFontPadding="true"
            android:text="5"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>
        android:text="1"

        <Button
            android:id="@+id/b6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/b7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/b8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:includeFontPadding="true"
            android:text="9"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>
        android:text="1"

        <Button
            android:id="@+id/b0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/point"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="."
            android:textSize="80dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/bx"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="X"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/plus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:includeFontPadding="true"
            android:text="+"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>
        android:text="1"

        <Button
            android:id="@+id/minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/divide"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="\"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>

        <Button
            android:id="@+id/multiply"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="*"
            android:textSize="50dp"
            android:textStyle="bold">

        </Button>


    </LinearLayout>

    <Button
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:text="CLEAR">

    </Button>



</LinearLayout>